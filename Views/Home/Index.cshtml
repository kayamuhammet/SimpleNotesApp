@inject IStringLocalizer<HomeController> Localizer
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = Localizer["HomePageTitle"];
}
<div class="container-fluid py-5">
    <div class="row mb-5 justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-3">@Localizer["AppTitle"]</h1>
            <p class="lead">@Localizer["AppDescription"]</p>
        </div>
    </div>

    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-6 bg-primary text-white d-flex align-items-center">
                        <div class="p-5">
                            <h2 class="fw-bold mb-4">@Localizer["EasyNoteTakingTitle"]</h2>
                            <p class="mb-4">@Localizer["EasyNoteTakingDescription"]</p>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a asp-controller="Notes" asp-action="Index" class="btn btn-light">@Localizer["StartNow"]</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-light">@Localizer["StartNow"]</a>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-5">
                            <h3 class="fw-bold mb-4">@Localizer["FeaturesTitle"]</h3>
                            <ul class="list-unstyled">
                                <li class="mb-3">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    @Localizer["Feature1"]
                                </li>
                                <li class="mb-3">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    @Localizer["Feature2"]
                                </li>
                                <li class="mb-3">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    @Localizer["Feature3"]
                                </li>
                                <li class="mb-3">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    @Localizer["Feature4"]
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-folder-plus fs-3"></i>
                    </div>
                    <h4>@Localizer["CategoriesTitle"]</h4>
                    <p>@Localizer["CategoriesDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-pencil-square fs-3"></i>
                    </div>
                    <h4>@Localizer["NotesTitle"]</h4>
                    <p>@Localizer["NotesDescription"]</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-danger text-white d-inline-flex align-items-center justify-content-center mb-3"
                        style="width: 60px; height: 60px;">
                        <i class="bi bi-gear fs-3"></i>
                    </div>
                    <h4>@Localizer["SimpleUI"]</h4>
                    <p>@Localizer["SimpleUIDescription"]</p>
                </div>
            </div>
        </div>
    </div>
</div>