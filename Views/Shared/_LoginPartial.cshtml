@using Microsoft.AspNetCore.Identity
@using SimpleNotesApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item">
        <span class="nav-link text-dark">Merhaba @(user?.FirstName ?? User.Identity.Name)!</span>
    </li>
    <li class="nav-item">
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" onsubmit="showLogoutNotification(event)">
            <button type="submit" class="btn btn-link nav-link text-dark">Çıkış Yap</button>
        </form>
    </li>
    <li class="nav-item">
        <div class="spinner-grow spinner-grow-sm m-3 text-success" role="status">
            <span class="sr-only">.</span>
        </div>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Giriş Yap</a>
    </li>
    <li class="nav-item">
        <div class="spinner-grow spinner-grow-sm m-3 text-danger" role="status">
            <span class="sr-only"></span>
        </div>
    </li>
}
</ul>