@model SimpleNotesApp.Models.Category
@inject IStringLocalizer<CategoryController> Localizer
@{
    ViewData["Title"] = Localizer["CategoryDelete"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h2 class="text-danger mb-4">@Localizer["CategoryDelete"]</h2>
                    
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>@Localizer["CategoryAlert"]</strong> @Localizer["CateogoryDeleteAlert"]
                    </div>
                    
                    @if (ViewBag.RelatedNotesCount > 0)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            @Html.Raw(Localizer["CategoryNotesMessage", ViewBag.RelatedNotesCount])
                        </div>                        
                    }
                    
                    <div class="card bg-light mt-4">
                        <div class="card-body">
                            <h5 class="card-title mb-3">@Localizer["CategoryInformation"]</h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">@Localizer["CategoryName"]:</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Name</dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["CategoryGoBack"]
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> @Localizer["DeleteCategory"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 