@model SimpleNotesApp.Models.Category
@inject IStringLocalizer<CategoryController> Localizer
@{
    ViewData["Title"] = Localizer["New Category"];
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h2 class="text-success mb-4">@Localizer["NewCategory"]</h2>
                    
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">@Localizer["CategoryName"]</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> @Localizer["CategoryGoBack"]
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> @Localizer["CategorySave"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



